<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stopwatch" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/bg_gradient_end</item>
        <item name="colorOnPrimary">@color/bg_gradient_end</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/bg_gradient_end</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/button_blue</item>
        <!-- Customize your theme here. -->


    </style>


<!--Styles for buttons-->
    <style name="Get_started_Button">
        <item name="colorButtonNormal">@color/button_blue</item>
        <item name="cornerRadius">50dp</item>
    </style>
    <style name="Action_Buttons">
        <item name="colorButtonNormal">@color/button_blue</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <!--Styles for TextViews-->
    <style name="TextViews">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="TitleTextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">@color/stroke</item>
    </style>

</resources>